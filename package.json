{
	"name": "turitoyuenan",
	"version": "0.8.0",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "vite dev --open",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^3.0.1",
		"@sveltejs/kit": "^2.0.6",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sass": "^1.69.6",
		"svelte": "^4.2.8",
		"vite": "^5.0.10"
	},
	"dependencies": {
		"@catppuccin/palette": "^1.0.1"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": true,
		"bracketSameLine": true,
		"trailingComma": "none",
		"quoteProps": "preserve",
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
